<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->

    <!-- Gradient Background -->
    <item>
        <shape>
            <gradient
                android:startColor="#796A686A"
                android:centerColor="#796A686A"
                android:endColor="#796A686A"
                android:type="linear"
                android:angle="135"/> <!-- Gradient colors and orientation -->
            <corners android:radius="20dp"/> <!-- Gradient corner radius (slightly smaller to fit within the border) -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <stroke
                android:width="1dp"
                android:color="#777777"/> <!-- Border color -->
            <corners android:radius="20dp"/> <!-- Border corner radius -->
        </shape>
    </item>
</layer-list>
